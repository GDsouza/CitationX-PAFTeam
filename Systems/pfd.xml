<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

<!-- ALTITUDE PREDICTOR -->

  <predict-simple>
    <name>altitude predictor</name>
    <update-interval-secs type="double">0.1</update-interval-secs>
    <input>instrumentation/altimeter/indicated-altitude-ft</input>
    <output>instrumentation/pfd/alt-lookahead-6s</output>
    <seconds>6.0</seconds>
    <filter-gain>0.05</filter-gain>
  </predict-simple>

  <filter>
    <name>ALT preprocessor (alt trend up)</name>
    <type>gain</type>
    <update-interval-secs type="double">0.1</update-interval-secs>
    <input>
      <property>instrumentation/pfd/alt-lookahead-6s</property>
    </input>
    <reference>
      <property>instrumentation/altimeter/indicated-altitude-ft</property>
      <offset>500</offset>
    </reference>
    <gain>-0.000480</gain>
    <output>instrumentation/pfd/alt-trend-up</output>
    <max>0.24</max>
    <min>0</min>
  </filter>

  <filter>
    <name>ALT preprocessor (alt trend down)</name>
    <type>gain</type>
    <update-interval-secs type="double">0.1</update-interval-secs>
    <input>
      <property>instrumentation/pfd/alt-lookahead-6s</property>
      <min>0</min>
    </input>
    <reference>
      <property>instrumentation/altimeter/indicated-altitude-ft</property>
      <offset>-500</offset>
    </reference>
    <gain>-0.000480</gain>
    <output>instrumentation/pfd/alt-trend-down</output>
    <min>-0.24</min>
    <max>0</max>
  </filter>


<!-- ALTITUDE CURSOR -->

	<filter>
    	<name>Altitude cursor</name> 
      <type>gain</type>
      <update-interval-secs type="double">0.05</update-interval-secs>
      <gain>1.0</gain>
      <input>
				<condition>
					<not-equals>
						<property>autopilot/locks/altitude</property>
						<value>VALT</value>
					</not-equals>
				</condition>
	      <property>autopilot/settings/asel</property>
				<scale>100</scale>
      </input>
      <input>
				<condition>
					<equals>
						<property>autopilot/locks/altitude</property>
						<value>VALT</value>
					</equals>
				</condition>
	      <property>autopilot/settings/target-altitude-ft</property>
      </input>
      <reference>
				<property>instrumentation/altimeter/indicated-altitude-ft</property>
      </reference>
      <output>instrumentation/pfd/target-altitude-diff</output>
      <min>-800</min>
      <max>800</max>
  </filter>

<!-- MINIMUMS -->

	<filter>
		<name>Baro altitude Minimum</name> 
		<type>gain</type>
		<update-interval-secs type="double">0.05</update-interval-secs>
		<gain>1.0</gain>
		<input>
			<condition>
				<equals>
					<property>autopilot/settings/minimums-mode</property>
					<value>BA</value>
				</equals>
			</condition>
			<property>instrumentation/pfd/minimums-baro</property>
		</input>
		<input>
			<condition>
				<equals>
					<property>autopilot/settings/minimums-mode</property>
					<value>RA</value>
				</equals>
			</condition>
					<property>instrumentation/pfd/minimums-radio</property>
		</input>
		<reference>
			<condition>
				<equals>
					<property>autopilot/settings/minimums-mode</property>
					<value>BA</value>
				</equals>
			</condition>
			<property>instrumentation/altimeter/indicated-altitude-ft</property>
		</reference>
		<reference>
			<condition>
				<equals>
					<property>autopilot/settings/minimums-mode</property>
					<value>RA</value>
				</equals>
			</condition>
			<property>position/altitude-agl-ft</property>
		</reference>
		<output>instrumentation/pfd/minimum-diff</output>
		<min>-610</min>
		<max>610</max>
	</filter>

<!-- SPEED CURSOR -->

	<filter>
    	<name>Speed cursor</name> 
      <type>gain</type>
      <update-interval-secs type="double">0.05</update-interval-secs>
      <gain>1.0</gain>
      <input>
		    <property>autopilot/settings/target-speed-kt</property>
      </input>
      <reference>
			<property>velocities/airspeed-kt</property>
      </reference>
      <output>instrumentation/pfd/target-speed-diff</output>
      <min>-100</min>
      <max>100</max>
  </filter>

<!-- SPEED PREDICTOR -->

  <filter>
    <name>PFD preprocessor (spd trend up)</name>
    <type>gain</type>
    <update-interval-secs type="double">0.1</update-interval-secs>
    <input>
			<property>autopilot/internal/lookahead-10-sec-airspeed-kt</property>
    </input>
    <reference>
      <property>velocities/airspeed-kt</property>
      <offset>90</offset> 
    </reference>
    <gain>-0.002667</gain>
    <output>instrumentation/pfd/speed-trend-up</output>
    <max>0.24</max>
    <min>0</min>
  </filter>

  <filter>
    <name>PFD preprocessor (spd trend down)</name>
    <type>gain</type>
    <update-interval-secs type="double">0.1</update-interval-secs>
    <input>
      <property>autopilot/internal/lookahead-10-sec-airspeed-kt</property>
      <min>0</min>
    </input>
    <reference>
      <property>velocities/airspeed-kt</property>
     <offset>-90</offset> 
    </reference>
    <gain>-0.002667</gain>
    <output>instrumentation/pfd/speed-trend-down</output>
    <min>-0.24</min>
    <max>0</max>
  </filter>

