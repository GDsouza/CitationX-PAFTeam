        </enable>
        <input>orientation/pitch-deg</input>
        <reference>autopilot/internal/pitch-bars</reference>
        <output>controls/flight/elevator-trim</output>
        <config>
            <Kp>-0.015</Kp> <!-- old -0.015 -->
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>10.0</Ti>	<!-- old 10.0 -->
            <Td>0.01</Td> <!-- old 0.01 -->
            <min>-1</min>
            <max>1</max>
        </config>
    </pid-controller>

