          </condition>
        </enable>
        <input>velocities/vertical-speed-fps</input>
        <reference>autopilot/internal/target-climb-rate-fps</reference>
        <output>autopilot/internal/pitch-filter</output>
        <config>
            <Kp>0.30</Kp> 	<!-- origin 0.15 -->
            <Ki>0.0</Ki>		<!-- origin 0.0 -->
