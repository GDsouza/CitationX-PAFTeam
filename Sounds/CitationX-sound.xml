<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

<fx>

    <engine>
        <name>left engine int</name>
        <path>Aircraft/CitationX/Sounds/turbojet_fan_int.wav</path>
        <condition>
                <property>sim/current-view/internal</property>
        </condition>
        <mode>looped</mode>
        <pitch>
            <property>engines/engine[0]/fan</property>
            <offset>0</offset>
            <factor>0.01</factor>
        </pitch>
        <position>
            <x> 3.0  </x>
            <y> 1.7 </y>
            <z> 0.6 </z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>15.0</max-dist>
    </engine>

    <engine>
        <name>right engine int</name>
        <path>Aircraft/CitationX/Sounds/turbojet_fan_int.wav</path>
        <condition>
                <property>sim/current-view/internal</property>
        </condition>
        <mode>looped</mode>
        <pitch>
            <property>engines/engine[1]/fan</property>
            <offset>0</offset>
            <factor>0.01</factor>
        </pitch>
        <position>
            <x> 3.0 </x>
            <y>-1.7 </y>
            <z> 0.6 </z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>15.0</max-dist>
    </engine>

    <engine>
        <name>left n1</name>
        <path>Sounds/turbojet_fan.wav</path>
					<condition>
						<greater-than>
							<property>engines/engine[0]/fan</property>
								<value>1</value>
						</greater-than>
						<not>
							<property>sim/current-view/internal</property>
						</not>
					</condition>
            <mode>looped</mode>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
        <pitch>
            <property>engines/engine/fan</property>
            <offset>0</offset>
            <factor>0.01</factor>
        </pitch>
        <position>
            <x>10</x>
            <y>1.3</y>
            <z>1</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>2000.0</max-dist>
    </engine>

    <engine>
        <name>right n1</name>
        <path>Sounds/turbojet_fan.wav</path>
        <condition>
          <greater-than>
          <property>engines/engine[1]/fan</property>
          <value>1</value>
          </greater-than>
            <and>
                <not>
                    <property>sim/current-view/internal</property>
                </not>
            </and>
          </condition>
          <mode>looped</mode>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
        <pitch>
            <property>engines/engine[1]/fan</property>
            <offset>0</offset>
            <factor>0.01</factor>
        </pitch>
        <position>
            <x>10</x>
            <y>-1.3</y>
            <z>1</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>2000.0</max-dist>
    </engine>

<!-- GENERATORS -->

    <engine>
        <name>left gen</name>
        <path>Aircraft/CitationX/Sounds/gen-start.wav</path>
        <condition>
					<and>
						<property>sim/current-view/internal</property>						
						<property>controls/electric/engine[0]/generator</property>
            <property>controls/electric/battery-switch[0]</property>
					</and>
        </condition>
        <mode>once</mode>
        <position>
            <x> 3.0  </x>
            <y> 1.7 </y>
            <z> 0.6 </z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>15.0</max-dist>
    </engine>

    <engine>
        <name>left gen1</name>
        <path>Aircraft/CitationX/Sounds/gen.wav</path>
        <condition>
					<and>
						<property>sim/current-view/internal</property>						
						<property>controls/electric/engine[0]/generator</property>
            <property>controls/electric/battery-switch[0]</property>
						<less-than>
            	<property>engines/engine[0]/turbine</property>
								<value>70</value>
						</less-than>
					</and>
        </condition>
        <mode>looped</mode>
        <position>
            <x> 3.0  </x>
            <y> 1.7 </y>
            <z> 0.6 </z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>15.0</max-dist>
    </engine>

    <engine>
        <name>right gen</name>
        <path>Aircraft/CitationX/Sounds/gen-start.wav</path>
        <condition>
					<and>
						<property>sim/current-view/internal</property>						
						<property>controls/electric/engine[1]/generator</property>
            <property>controls/electric/battery-switch[0]</property>
					</and>
        </condition>
        <mode>once</mode>
        <position>
            <x> 3.0 </x>
            <y>-1.7 </y>
            <z> 0.6 </z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>15.0</max-dist>
    </engine>

    <engine>
        <name>right gen1</name>
        <path>Aircraft/CitationX/Sounds/gen.wav</path>
        <condition>
					<and>
						<property>sim/current-view/internal</property>						
						<property>controls/electric/engine[1]/generator</property>
            <property>controls/electric/battery-switch[0]</property>
					</and>
        </condition>
        <mode>looped</mode>
        <position>
            <x> 3.0 </x>
            <y>-1.7 </y>
            <z> 0.6 </z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>15.0</max-dist>
    </engine>

<!-- AVIONICS-->

    <avionics1>
        <name>avionics1</name>
        <path>Aircraft/CitationX/Sounds/avionics.wav</path>
        <condition>
					<and>
            <property>controls/electric/battery-switch[1]</property>
							<equals>
 		       			<property>controls/electric/avionics-switch</property>			
								<value>1</value>
							</equals>
					</and>
        </condition>
        <mode>once</mode>
        <reference-dist>1.0</reference-dist>
        <max-dist>15.0</max-dist>
    </avionics1>

    <avionics2>
        <name>avionics2</name>
        <path>Aircraft/CitationX/Sounds/avionics.wav</path>
        <condition>
					<and>
            <property>controls/electric/battery-switch[1]</property>
							<equals>
 		       			<property>controls/electric/avionics-switch</property>			
								<value>2</value>
							</equals>
					</and>
        </condition>
        <mode>once</mode>
        <reference-dist>1.0</reference-dist>
        <max-dist>15.0</max-dist>
    </avionics2>

<!-- WAYPOINTS -->

    <waypoints>
        <name>waypoints</name>
        <path>Aircraft/CitationX/Sounds/wp.wav</path>
        <condition>
					<and>
						<not>
							<or>
				        <property>gear/gear[0]/wow</property>
				        <property>gear/gear[1]/wow</property>
				        <property>gear/gear[2]/wow</property>
								<equals>
				      		<property>autopilot/internal/nav-id</property>
									<value>""</value>
								</equals>
							</or>
						</not>
						<less-than>
 		       		<property>autopilot/internal/nav-distance</property>			
								<value>1.0</value>
						</less-than>
					</and>
        </condition>
        <mode>once</mode>
        <reference-dist>1.0</reference-dist>
        <max-dist>15.0</max-dist>
    </waypoints>

<!-- FUEL -->

		<fuel>
      <name>crossfeed</name>
        <path>Aircraft/CitationX/Sounds/avionics.wav</path>
        <condition>
					<and>
            <greater-than>
                <property>systems/electrical/outputs/efis</property>
                <value>15</value>
            </greater-than>
						<or>
  		       		<property>controls/engines/engine[0]/feed_tank</property>		
 		       			<property>controls/engines/engine[1]/feed_tank</property>
						</or>
					</and>
        </condition>
        <mode>once</mode>
        <reference-dist>1.0</reference-dist>
        <max-dist>15.0</max-dist>
    </fuel>

<!-- REVERSE -->
    <engine>
        <name>reverse</name>
	    <path>Aircraft/CitationX/Sounds/6-lights.wav</path>
        <mode>once</mode>
        <condition>
            <greater-than>
                <property>surface-positions/reverser-norm</property>
                <value>0.9</value>
            </greater-than>
            <and>
                <property>sim/current-view/internal</property>
            </and>
        </condition>
    </engine>

    <engine>
        <name>reverse-action</name>
	    <path>Aircraft/CitationX/Sounds/reverse.wav</path>
        <mode>once</mode>
        <condition>
            <greater-than>
                <property>surface-positions/reverser-norm</property>
                <value>0.1</value>
            </greater-than>
            <and>
                <property>sim/current-view/internal</property>
            </and>
        </condition>
    </engine>

    <engine>
        <name>reverser</name>
        <path>Sounds/exhaust_loop.wav</path>
        <condition>
            <greater-than>
                <property>surface-positions/reverser-norm</property>
                <value>0</value>
            </greater-than>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>surface-positions/reverser-norm</property>
            <factor>0.5</factor>
        </volume>
        <volume>
            <property>engines/engine/turbine</property>
            <factor>0.01</factor>
        </volume>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
        <pitch>
            <offset>1.6</offset>
        </pitch>
        <position>
            <x> 5.0 </x>
            <y> 0.0 </y>
            <z> 1.0 </z>
        </position>
        <reference-dist>100.0</reference-dist>
        <max-dist>1000.0</max-dist>
    </engine>

<!--  RUMBLE -->
    <rumble>
        <name>rumble</name>
        <path>Sounds/rumble.wav</path>
        <condition>
            <or>
                <property>gear/gear[0]/wow</property>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[2]/wow</property>
            </or>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>velocities/groundspeed-kt</property>
            <factor>0.02</factor>
            <min>0</min>
            <max>0.5</max>
        </volume>
        <position>
            <x> 0.0 </x>
            <y> 0.0 </y>
            <z>-1.0 </z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>50.0</max-dist>
    </rumble>

<!--  GEARS -->

    <gear>
        <name>gear</name>
        <path>Sounds/gear.wav</path>
        <mode>looped</mode>
				<condition>
					<greater-than>
				    <property>gear/gear[0]/position-norm</property>
						<value>0.01</value>
					</greater-than>
					<less-than>
				    <property>gear/gear[0]/position-norm</property>
						<value>0.99</value>
					</less-than>
				</condition>
			  <volume>
			    <factor>0.005</factor>
			    <min>0.1</min>
			    <max>0.1</max>
			    <offset>0.1</offset>
				</volume>
        <pitch>
            <internal>dt_play</internal>
            <offset>0.8</offset>
            <factor>-0.001</factor>
        </pitch>
        <position>
            <x>-7.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </position>
        <reference-dist>2.0</reference-dist>
        <max-dist>10.0</max-dist>
    </gear>

    <gear>
        <name>gear-lock</name>
        <path>Sounds/gear-lck.wav</path>
        <condition>
            <or>
              <equals>
                  <property>gear/gear[0]/position-norm</property>
                  <value>0</value>
              </equals>
							<and>
                <greater-than>
                    <property>gear/gear[1]/position-norm</property>
                    <value>0.95</value>
                </greater-than>
                <less-than>
                    <property>gear/gear[1]/position-norm</property>
                    <value>0.99</value>
                </less-than>
							</and>
            </or>
        </condition>
        <mode>once</mode>
        <position>
            <x>-7.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </position>
        <reference-dist>2.0</reference-dist>
        <max-dist>10.0</max-dist>
    </gear>

<!--  GEAR DOWN -->
    <gear>
        <name>gear-down</name>
	    <path>Aircraft/CitationX/Sounds/gear-down.wav</path>
        <mode>once</mode>
        <condition>
					<and>
						<property>controls/gear/gear-down</property>						
						<less-than>
							<property>gear/gear[1]/position-norm</property>							
							<value>0.99</value>
						</less-than>
						<greater-than>
							<property>gear/gear[1]/position-norm</property>							
							<value>0.65</value>
						</greater-than>
         </and>
        </condition>
    </gear>

<!--  GEAR UP -->
    <gear>
        <name>gear-up</name>
	    <path>Aircraft/CitationX/Sounds/gear-up.wav</path>
        <mode>once</mode>
        <condition>
					<and>
						<equals>
							<property>gear/gear[0]/position-norm</property>
							<value>0</value>
						</equals>
						<equals>
							<property>gear/gear[1]/position-norm</property>
							<value>0</value>
						</equals>
						<equals>
							<property>gear/gear[2]/position-norm</property>
							<value>0</value>
						</equals>
					</and>
        </condition>
    </gear>

    <gear>
        <name>gear-horn</name>
        <type>avionics</type>
        <path>Sounds/gear-hrn.wav</path>
        <condition>
					<or>
            <property>instrumentation/alerts/gear-hrn</property>
						<equals>
            	<property>instrumentation/annunciators/test-select</property>
								<value>2</value>
						</equals>
					</or>
        </condition>
        <mode>looped</mode>
<!--        <volume>
            <property>instrumentation/alerts/gear-horn</property>
            <factor>0.7</factor>
        </volume>
-->        <position>
            <x> 2.5 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </position>
    </gear>

    <squeal>
        <name>squeal</name>
        <path>Sounds/squeal2.wav</path>
        <condition>
            <or>
                <property>gear/gear[0]/wow</property>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[2]/wow</property>
            </or>
        </condition>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.01</factor>
        </volume>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
        <position>
            <x>-4.0 </x>
            <y> 0.0 </y>
            <z>-2.0 </z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>1000.0</max-dist>
    </squeal>

<!-- FLAPS -->
    <flap>
        <name>flaps</name>
        <path>Aircraft/CitationX/Sounds/flaps.wav</path>
            <property>surface-positions/flap-pos-norm</property>
        <mode>in-transit</mode>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
        <position>
            <x>-1.0 </x>
            <y>-2.0 </y>
            <z>-1.0 </z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>10.0</max-dist>
    </flap>

    <flaps4>
        <name>flaps4</name>
	    <path>Aircraft/CitationX/Sounds/flaps4-cp.wav</path>
        <mode>once</mode>
        <condition>
            <or>
                <equals>
                    <property>surface-positions/flap-pos-norm</property>
                    <value>1</value>
                </equals>
                <equals>
                    <property>surface-positions/flap-pos-norm</property>
                    <value>1</value>
                </equals>
            </or>
            <and>
                <not>
                    <property>gear/gear[0]/wow</property>
                    <property>gear/gear[1]/wow</property>
                    <property>gear/gear[2]/wow</property>
                </not>
            </and>
        </condition>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
    </flaps4>

<!-- SPEED BRAKE -->
    <speedbrake>
        <name>speedbrake</name>
        <path>Sounds/flaps.wav</path>
            <property>surface-positions/speedbrake-pos-norm</property>
        <mode>in-transit</mode>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
        <position>
            <x>-1.0 </x>
            <y>-2.0 </y>
            <z>-1.0 </z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>10.0</max-dist>
    </speedbrake>

    <speedbrakecp>
        <name>speedbrake-cp</name>
        <path>Sounds/speed-brake.wav</path>
            <property>surface-positions/speedbrake-pos-norm</property>
        <mode>once</mode>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
    </speedbrakecp>

<!-- WIND -->
    <wind>
        <name>wind</name>
        <path>Sounds/wind.wav</path>
        <property>velocities/airspeed-kt</property>
        <mode>looped</mode>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.002</factor>
            <min>0.0</min>
            <max>0.15</max>
        </volume>
        <pitch>
            <property>velocities/airspeed-kt</property>
            <factor>0.01</factor>
            <offset>1.25</offset>
        </pitch>
        <position>
            <x>2</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>1</reference-dist>
        <max-dist>5.0</max-dist>
    </wind>

<!--  BRAKES   -->

        <brakes>
            <name>brake-lever-off</name>
            <mode>once</mode>
            <path>Aircraft/CitationX/Sounds/brake-lever.wav</path>
            <condition>
              <equals>
                <property>controls/gear/brake-parking</property>
								<value>0.0</value>								
              </equals>
           </condition>
            <volume>
                <property>sim/signals/fdm-initialized</property>
            </volume>
            <pitch>
                <offset>0.8</offset>
            </pitch>
            <position>
                <x> 0.0 </x>
                <y> 0.0 </y>
                <z> 0.0 </z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </brakes>

        <brakes>
            <name>brake-lever-on</name>
            <mode>once</mode>
            <path>Aircraft/CitationX/Sounds/brake-lever.wav</path>
            <condition>
              <less-than>
                <property>controls/gear/brake-parking</property>
								<value>0.99</value>								
              </less-than>
              <greater-than>
                <property>controls/gear/brake-parking</property>
								<value>0.90</value>								
              </greater-than>
            </condition>
            <volume>
                <property>sim/signals/fdm-initialized</property>
            </volume>
            <pitch>
                <offset>0.8</offset>
            </pitch>
            <position>
                <x> 0.0 </x>
                <y> 0.0 </y>
                <z> 0.0 </z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </brakes>

    <click>
        <name>click1</name>
        <path>Sounds/click.wav</path>
        <type>avionics</type>
        <condition>
            <property>sim/sound/click</property>
        </condition>
    </click>

    <click>
        <name>click2</name>
        <path>Sounds/click.wav</path>
        <type>avionics</type>
        <condition>
            <not>
                <property>sim/sound/click</property>
            </not>
        </condition>
    </click>

    <!-- DOORS -->

        <doors>
            <name>separation-door-open</name>
            <mode>once</mode>
            <path>Aircraft/CitationX/Sounds/cabin-door.wav</path>
            <condition>
                <greater-than>
                    <property>controls/separation-door/open</property>
                    <value>0.01</value>
                </greater-than>
                <less-than>
                    <property>controls/separation-door/open</property>>
                    <value>0.99</value>
                </less-than>
            </condition>
            <volume>
                <property>sim/signals/fdm-initialized</property>
                <factor>1</factor>
            </volume>
            <position>
                <x>-6.6 </x>
                <y> 0.0 </y>
                <z> 0.6 </z>
            </position>
        </doors>

        <doors>
            <name>separation-door-closed</name>
            <mode>once</mode>
            <path>Aircraft/CitationX/Sounds/cabin-door.wav</path>
            <condition>
              <and>
                <less-than>
                    <property>controls/separation-door/open</property>>
                    <value>1</value>
                </less-than>
             </and>                          
            </condition>
           <volume>
                <property>sim/signals/fdm-initialized</property>
                <factor>1</factor>
            </volume>
            <position>
                <x>-6.6 </x>
                <y> 0.0 </y>
                <z> 0.6 </z>
            </position>
        </doors>

        <doors>
            <name>toilet-door-open</name>
            <mode>once</mode>
            <path>Aircraft/CitationX/Sounds/cabin-door.wav</path>
            <condition>
                <greater-than>
                    <property>controls/toilet-door/open</property>
                    <value>0.01</value>
                </greater-than>
            </condition>
            <volume>
                <property>sim/signals/fdm-initialized</property>
                <factor>1</factor>
            </volume>
            <position>
                <x>-0.6 </x>
                <y> 0.0 </y>
                <z> 0.6 </z>
            </position>
        </doors>

        <doors>
            <name>toilet-door-closed</name>
            <mode>once</mode>
            <path>Aircraft/CitationX/Sounds/cabin-door.wav</path>
            <condition>
              <and>
                <less-than>
                    <property>controls/toilet-door/open</property>>
                    <value>1</value>
                </less-than>
                <greater-than>
                    <property>controls/toilet-door/open</property>>
                    <value>0.01</value>
                </greater-than>
              </and>                          
            </condition>
            <volume>
                <property>sim/signals/fdm-initialized</property>
                <factor>1</factor>
            </volume>
            <position>
                <x>-0.6 </x>
                <y> 0.0 </y>
                <z> 0.6 </z>
            </position>
        </doors>


    <!-- ALARMS -->
    <alarm>
        <name>Master warning</name>
        <mode>once</mode>
        <path>Aircraft/CitationX/Sounds/chime2.wav</path>
        <condition>
					<and>
            <property>instrumentation/annunciators/master-warning</property>
						<not>
            	<property>instrumentation/annunciators/ack-warning</property>
						</not>
					</and>
        </condition>
    </alarm>

    <warnings>
        <name>chime1</name>
        <type>avionics</type>
        <path>Aircraft/CitationX/Sounds/chime2.wav</path>
				<condition>
					<and>
		        <property>instrumentation/annunciators/master-caution</property>
						<not>
            	<property>instrumentation/annunciators/ack-caution</property>
						</not>
					</and>
				</condition>
        <mode>once</mode>
    </warnings>

    <alarm>
        <name>Overspeed alarm</name>
        <mode>looped</mode>
        <path>Aircraft/CitationX/Sounds/overspeed.wav</path>
        <condition>
					<or>
            <property>sim/alarms/overspeed-alarm</property>
						<equals>
							<property>instrumentation/annunciators/test-select</property>
								<value>7</value>
						</equals>
					</or>
        </condition>
    </alarm>

    <alarm>
        <name>Autopilot disconnect</name>
        <mode>once</mode>
        <type>avionics</type>
        <path>Aircraft/CitationX/Sounds/autopilot-disconnect.wav</path>
        <condition>
            <equals>
                <property>controls/autoflight/disengage-pos-norm</property>     
                <value>1</value>
            </equals>
        </condition>
        <volume>
            <offset>1</offset>
        </volume>
    </alarm>

    <warnings>
        <name>chime1</name>
        <type>avionics</type>
        <path>Aircraft/CitationX/Sounds/chime2.wav</path>
				<condition>
					<and>
		        <property>instrumentation/annunciators/master-caution</property>
						<not>
            	<property>instrumentation/annunciators/ack-caution</property>
						</not>
					</and>
				</condition>
        <mode>once</mode>
    </warnings>

    <warnings>
        <name>chime2</name>
        <type>avionics</type>
        <path>Aircraft/CitationX/Sounds/chime2.wav</path>
				<condition>
					<or>
		        <property>systems/electrical/left-emer-bus</property>
		        <property>systems/electrical/right-emer-bus</property>
						<equals>
							<property>controls/electric/std-by-pwr</property>							
								<value>-1</value>
						</equals>
					</or>
				</condition>
        <mode>looped</mode>
    </warnings>

    <warnings>
        <name>gear-horn</name>
        <type>avionics</type>
        <path>Aircraft/CitationX/Sounds/horn.wav</path>
        <property>sim/sound/stall-horn</property>
        <mode>once</mode>
    </warnings>

<!-- ANNOUNCEMENTS -->

    <announcement>
        <name>welcome</name>
        <path>Aircraft/CitationX/Sounds/welcome.wav</path>
        <mode>once</mode>
      <condition>
				<and>
					<equals>
	          <property>controls/electric/avionics-switch</property>
						<value>2</value>
					</equals>
					<property>systems/electrical/right-bus-norm</property>
				</and>
      </condition>
      <position>
        <x>-7.00 </x>
        <y> 0.00 </y>
        <z> 0.00 </z>
      </position>
   </announcement>

    <!-- SPEED CALLOUTS -->
    <callout>
      <name>80 knots</name>
      <mode>once</mode>
      <type>avionics</type>
      <path>Aircraft/CitationX/Sounds/80kt.wav</path>
      	<condition>
          <and>
            <or>
              <property>gear/gear[0]/wow</property>
              <property>gear/gear[1]/wow</property>
              <property>gear/gear[2]/wow</property>
            </or>
          	<less-than>
              <property>velocities/airspeed-kt</property>
              <property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
            </less-than>
            <greater-than>
              <property>velocities/airspeed-kt</property>
                <value>80</value>
            </greater-than>
            <less-than>
              <property>velocities/airspeed-kt</property>
                <value>90</value>
            </less-than>
          </and>
        </condition>
    </callout>

    <callout>
    	<name>V1</name>
      <mode>once</mode>
      <type>avionics</type>
      <path>Aircraft/CitationX/Sounds/v1.wav</path>
      <condition>
        <and>
          <or>
            <property>gear/gear[0]/wow</property>
            <property>gear/gear[1]/wow</property>
            <property>gear/gear[2]/wow</property>
          </or>
          <less-than>
            <property>velocities/airspeed-kt</property>
            <property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
          </less-than>
         	<greater-than>
           	<property>velocities/airspeed-kt</property>
            <property>controls/flight/v1</property>
          </greater-than>
        </and>
      </condition>
    </callout>

    <callout>
			<name>Vr</name>
			<mode>once</mode>
			<type>avionics</type>
			<path>Aircraft/CitationX/Sounds/vr.wav</path>
			<condition>
        <and>
          <or>
            <property>gear/gear[0]/wow</property>
            <property>gear/gear[1]/wow</property>
            <property>gear/gear[2]/wow</property>
          </or>
          <less-than>
            <property>velocities/airspeed-kt</property>
            <property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
          </less-than>
       		<greater-than>
						<property>velocities/airspeed-kt</property>
						<property>controls/flight/vr</property>
          </greater-than>
        </and>
      </condition>
    </callout>

		<callout>
			<name>Positive climb rate</name>
      <mode>once</mode>
      <type>avionics</type>
      <path>Aircraft/CitationX/Sounds/p-climb.wav</path>
      <condition>
        <and>
          <less-than>
            <property>velocities/airspeed-kt</property>
            <property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
          </less-than>
          <greater-than>
            <property>velocities/airspeed-kt</property>
              <value>180</value>
          </greater-than>
          <greater-than-equals>
            <property>autopilot/internal/vert-speed-fpm</property>
              <value>500</value>
          </greater-than-equals>
					<greater-than>
            <property>orientation/pitch-deg</property>
              <value>7</value>
          </greater-than>
          <less-than>
            <property>orientation/pitch-deg</property>
              <value>17</value>
          </less-than>
					<less-than>
            <property>position/altitude-agl-ft</property>
              <value>500</value>
          </less-than>
        </and>
      </condition>
    </callout>

<!-- APU -->

	<apu>
	    <name>APU starting</name>
	    <mode>once</mode>
	    <path>Aircraft/CitationX/Sounds/apu_start.wav</path>
	    <condition>
				<and>
					<property>controls/APU/running</property>
			    <less-than>
						<property>controls/APU/rpm</property>
							<value>0.99</value>
		    	</less-than>
				</and>
	    </condition>
	    <reference-dist>10</reference-dist>
	    <max-dist>30</max-dist>
	</apu>

	<apu>
	    <name>APU running</name>
	    <mode>looped</mode>
	    <path>Aircraft/CitationX/Sounds/apu_run.wav</path>
	    <condition>
				<and>
					<greater-than-equals>
			    	<property>controls/APU/rpm</property>
			    		<value>0.99</value>
					</greater-than-equals>
					<less-than>
	           <property>engines/engine[0]/turbine</property>
							<value>73</value>
					</less-than>
				</and>
	    </condition>
	    <reference-dist>10</reference-dist>
	    <max-dist>30</max-dist>
	</apu>

	<apu>
	    <name>APU shutdown</name>
	    <mode>once</mode>
	    <path>Aircraft/CitationX/Sounds/apu_shutdown.wav</path>
	    <condition>
				<and>
					<not>
						<property>controls/APU/running</property>
					</not>
				  <greater-than>
						<property>controls/APU/rpm</property>
							<value>0</value>
				  </greater-than>
				</and>
	    </condition>
	    <reference-dist>10</reference-dist>
	    <max-dist>30</max-dist>
	</apu>

	<apu>
	    <name>APU warning</name>
      <type>avionics</type>
      <mode>once</mode>
      <path>Aircraft/CitationX/Sounds/chime1.wav</path>
      <condition>
				<and>
					<not>
						<property>controls/electric/APU-generator</property> 
					</not>
					<or>
						<equals>
        			<property>controls/APU/rpm</property>
								<value>1</value>
						</equals>
          		<property>controls/APU/test</property>
					</or>
				</and>
      </condition>
	</apu>

	<apu>
	    <name>APU bleed</name>
      <type>avionics</type>
      <mode>once</mode>
      <path>Aircraft/CitationX/Sounds/chime1.wav</path>
      <condition>
				<or>
					<and>
						<equals>
  	      		<property>controls/APU/rpm</property>
								<value>1</value>
						</equals>
						<greater-than>
  	      			<property>controls/APU/bleed</property>
									<value>0</value>
						</greater-than>
					</and>
         		<property>controls/APU/test</property>
				</or>
      </condition>
	</apu>

</fx>

</PropertyList>
