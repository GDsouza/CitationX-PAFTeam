        </position>
        <direction>
            <x>-1.0</x>
            <y> 0.1</y>
            <z> 0.0</z>
        </direction>
        <ambient>
            <r>1.00</r>
            <g>0.95</g>
            <b>0.95</b>
            <a>0</a>
        </ambient>
        <diffuse>
            <r>1.00</r>
            <g>0.95</g>
            <b>0.95</b>
            <a>0</a>
        </diffuse>
        <specular>
            <r>1.00</r>
            <g>0.95</g>
            <b>0.95</b>
            <a>0</a>
        </specular>
        <dim-factor>
            <property>systems/electrical/left-main-bus-volts</property>
        </dim-factor>
        <attenuation>
            <c>1.0</c>
            <l>0.0225</l>
            <q>0.000001875</q>
        </attenuation>
        <spot-cutoff>10</spot-cutoff>
        <spot-exponent>40</spot-exponent>
