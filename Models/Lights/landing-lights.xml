<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <!-- Compositor lights -->

    <light>
        <name>landing-light-left</name>
        <type>spot</type>
        <position>
            <x-m> -3.0</x-m>
            <y-m>-1.1</y-m>
            <z-m> -0.9</z-m>
        </position>
        <direction>
            <x>-1.0</x>
            <y> -0.1</y>
            <z> 0.0</z>
        </direction>
        <ambient>
            <r>1.00</r>
            <g>0.95</g>
            <b>0.95</b>
            <a>0</a>
        </ambient>
        <diffuse>
            <r>1.00</r>
            <g>0.95</g>
            <b>0.95</b>
            <a>0</a>
        </diffuse>
        <specular>
            <r>1.00</r>
            <g>0.95</g>
            <b>0.95</b>
            <a>0</a>
        </specular>
        <dim-factor>
            <property>systems/electrical/left-main-bus-volts</property>
        </dim-factor>
        <attenuation>
            <c>1.0</c>
            <l>0.0225</l>
            <q>0.000001875</q>
        </attenuation>
        <spot-cutoff>10</spot-cutoff>
        <spot-exponent>40</spot-exponent>
        <range-m>500</range-m>
    </light>

    <animation>
        <type>select</type>
        <object-name>landing-light-left</object-name>
        <condition>
          <property>controls/lighting/landing-light</property>
        </condition>
    </animation>

    <light>
        <name>landing-light-right</name>
