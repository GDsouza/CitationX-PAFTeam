<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

<path>nav1.ac</path>

<!-- NAV1 Controls -->

  <animation>
    <type>select</type>
    <condition>
      <property>sim/model/nav1-visible</property>
    </condition>
    <object-name>nav1.base</object-name>
    <object-name>nav1.labels</object-name>
    <object-name>RIC1.crs</object-name>
    <object-name>RIC1.hdg</object-name>
    <object-name>knobs.circles</object-name>
    <object-name>nav1.screws</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>nav1.base</object-name>
    <object-name>nav1.screws</object-name>
    <emission>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
      <factor-prop>controls/lighting/flood-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>nav1.labels</object-name>
    <object-name>knob.circles</object-name>
    <emission>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
      <factor-prop>controls/lighting/el-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>RIC1.crs</object-name>
    <object-name>RIC1.hdg</object-name>
    <emission>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
      <factor-prop>controls/lighting/lh-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>RIC1.crs</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>property-assign</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <property>orientation/heading-magnetic-deg</property>
        </binding>
    </action>
    <action>
        <button>3</button>
        <repeatable>true</repeatable>
        <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <step>1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
        </binding>
    </action>
    <action>
        <button>4</button>
        <repeatable>true</repeatable>
        <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <step>-1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
        </binding>
    </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>CRS-selected</tooltip-id>
                <label>CRS1 sel: %.0f</label>
            <property>instrumentation/nav/radials/sel-deg-corr</property>
            </binding>
        </hovered>
</animation>

<animation>
    <type>pick</type>
    <object-name>RIC1.hdg</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>property-assign</command>
            <property>autopilot/settings/heading-bug-deg</property>
            <property>orientation/heading-magnetic-deg</property>
        </binding>
    </action>
    <action>
        <button>3</button>
        <repeatable>true</repeatable>
        <binding>
            <command>property-adjust</command>
            <property>autopilot/settings/heading-bug-deg</property>
            <step>1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
        </binding>
    </action>
    <action>
        <button>4</button>
        <repeatable>true</repeatable>
        <binding>
            <command>property-adjust</command>
            <property>autopilot/settings/heading-bug-deg</property>
            <step>-1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
        </binding>
    </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>HDG</tooltip-id>
                <label>HDG sel: %.0f</label>
            <property>autopilot/settings/heading-bug-deg</property>
            </binding>
        </hovered>
</animation>

</PropertyList>
