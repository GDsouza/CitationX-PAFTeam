<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

<path>nav1.ac</path>

<!-- NAV1 Controls -->

  <animation>
    <type>select</type>
    <condition>
      <property>sim/model/nav1-visible</property>
    </condition>
    <object-name>nav1.base</object-name>
    <object-name>nav1.labels</object-name>
    <object-name>RIC1.crs</object-name>
    <object-name>RIC1.hdg</object-name>
    <object-name>RIC1.alt</object-name>
    <object-name>knobs.circles</object-name>
    <object-name>nav1.screws</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>nav1.base</object-name>
    <object-name>nav1.screws</object-name>
    <object-name>RIC1.alt</object-name>
    <emission>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
      <factor-prop>controls/lighting/flood-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>nav1.labels</object-name>
    <object-name>knob.circles</object-name>
    <emission>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
      <factor-prop>controls/lighting/el-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>RIC1.crs</object-name>
    <object-name>RIC1.hdg</object-name>
   <emission>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
      <factor-prop>controls/lighting/lh-norm</factor-prop>
    </emission>
  </animation>

	<animation>
    <type>pick</type>
    <object-name>RIC1.crs</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/pfd/source</property>
            <value>NAV1</value>
          </equals>
        </condition>
        <command>property-assign</command>
          <property>instrumentation/pfd/selected-deg</property>
          <property>instrumentation/nav/heading-deg</property>
      </binding>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/pfd/source</property>
            <value>NAV2</value>
          </equals>
        </condition>
        <command>property-assign</command>
          <property>instrumentation/pfd/selected-deg</property>
          <property>instrumentation/nav[1]/heading-deg</property>
      </binding>
    </action>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/pfd/selected-deg</property>
        <step>1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/pfd/selected-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
     </action>
    <hovered>
			<binding>
 			  <command>set-tooltip</command>
			  <tooltip-id>CRS 1</tooltip-id>
    	  <label>CRS : %.0f</label>
    	  <property>instrumentation/pfd/selected-deg</property>
 	    </binding>
	  </hovered>
	</animation>

  <animation>
    <type>pick</type>
    <object-name>RIC1.hdg</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/pfd/heading-deg</property>
        <property>orientation/heading-magnetic-deg</property>
      </binding>
    </action>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/pfd/heading-deg</property>
        <step>1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/pfd/heading-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>HDG 1</tooltip-id>
        <label>HDG : %.0f</label>
        <property>instrumentation/pfd/heading-deg</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>RIC1.alt</object-name>
    <condition>
      <not>
        <property>instrumentation/pfd/pfd-sel</property>
      </not>
    </condition>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/pfd/asel</property>
        <value>100</value>
      </binding>
    </action>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
         <command>property-adjust</command>
          <property>instrumentation/pfd/asel</property>
          <step>5</step>
          <min>0</min>
          <max>510</max>
          <wrap>0</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/pfd/asel</property>
        <step>-5</step>
        <min>0</min>
        <max>510</max>
        <wrap>0</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>ALT 1</tooltip-id>
        <label>ALT : %.0f</label>
        <property>instrumentation/pfd/asel</property>
      </binding>
    </hovered>
  </animation>

</PropertyList>
