<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

<path>nav2.ac</path>

<!-- NAV2 Controls -->

  <animation>
      <type>select</type>
      <condition>
          <property>sim/model/nav2-visible</property>
      </condition>
      <object-name>nav2.base</object-name>
      <object-name>knobs.circles</object-name>
      <object-name>RIC2.crs</object-name>
      <object-name>RIC2.alt</object-name>
      <object-name>RIC2.hdg</object-name>
      <object-name>nav2.labels</object-name>
      <object-name>nav2.screws</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>nav2.base</object-name>
    <object-name>nav2.screws</object-name>
    <object-name>RIC2.alt</object-name>
    <emission>
        <red>1</red>
        <green>1</green>
        <blue>1</blue>
        <factor-prop>controls/lighting/flood-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>RIC2.crs</object-name>
    <object-name>RIC2.hdg</object-name>
    <emission>
        <red>1</red>
        <green>1</green>
        <blue>1</blue>
        <factor-prop>controls/lighting/rh-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>nav2.labels</object-name>
    <object-name>knob.circles</object-name>
    <emission>
        <red>1</red>
        <green>1</green>
        <blue>1</blue>
        <factor-prop>controls/lighting/el-norm</factor-prop>
    </emission>
  </animation>

	<animation>
    <type>pick</type>
    <object-name>RIC2.crs</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/pfd[1]/source</property>
            <value>NAV1</value>
          </equals>
        </condition>
        <command>property-assign</command>
          <property>instrumentation/pfd[1]/selected-deg</property>
          <property>instrumentation/nav/heading-deg</property>
      </binding>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/pfd[1]/source</property>
            <value>NAV2</value>
          </equals>
        </condition>
        <command>property-assign</command>
          <property>instrumentation/pfd[1]/selected-deg</property>
          <property>instrumentation/nav[1]/heading-deg</property>
      </binding>
    </action>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/pfd[1]/selected-deg</property>
        <step>1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/pfd[1]/selected-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <hovered>
			<binding>
			  <command>set-tooltip</command>
			  <tooltip-id>CRS 2</tooltip-id>
    	  <label>CRS : %.0f</label>
    	  <property>instrumentation/pfd[1]/selected-deg</property>
 	    </binding>
	  </hovered>
	</animation>

	<animation>
    <type>pick</type>
    <object-name>RIC2.hdg</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/pfd[1]/heading-deg</property>
        <property>orientation/heading-magnetic-deg</property>
      </binding>
    </action>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/pfd[1]/heading-deg</property>
        <step>1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/pfd[1]/heading-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>HDG 2</tooltip-id>
        <label>HDG : %.0f</label>
        <property>instrumentation/pfd[1]/heading-deg</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>RIC2.alt</object-name>
    <condition>
      <property>instrumentation/pfd/pfd-sel</property>
    </condition>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/pfd[1]/asel</property>
        <value>100</value>
      </binding>
    </action>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
         <command>property-adjust</command>
          <property>instrumentation/pfd[1]/asel</property>
          <step>5</step>
          <min>0</min>
          <max>510</max>
          <wrap>0</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/pfd[1]/asel</property>
        <step>-5</step>
        <min>0</min>
        <max>510</max>
        <wrap>0</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>ALT 2</tooltip-id>
        <label>ALT : %.0f</label>
        <property>instrumentation/pfd[1]/asel</property>
      </binding>
    </hovered>
  </animation>

</PropertyList>
