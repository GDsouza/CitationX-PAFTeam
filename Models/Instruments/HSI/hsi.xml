<PropertyList>

    <path>hsi.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>hdgring</object-name>
        <property>instrumentation/heading-indicator/indicated-heading-deg</property>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>CRSneedle2</object-name>
        <object-name>CRSneedle2.001</object-name>
        <property>instrumentation/heading-indicator/indicated-heading-deg</property>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>CRSneedle2</object-name>
        <object-name>CRSneedle2.001</object-name>
        <property>instrumentation/nav/radials/selected-deg</property>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>CRSneedle2.001</object-name>
        <property>instrumentation/nav/heading-needle-deflection</property>
        <interpolation>
            <entry>
                <ind>-10.0</ind><dep>-0.013</dep>
            </entry>
            <entry>
                <ind>0.0</ind><dep>0.0</dep>
            </entry>
            <entry>
                <ind>10.0</ind><dep>0.013</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>HSI.gsneedle</object-name>
        <property>instrumentation/nav/gs-needle-deflection</property>
        <interpolation>
            <entry>
                <ind>-10.0</ind><dep>-0.01</dep>
            </entry>
            <entry>
                <ind>0.0</ind><dep>0.0</dep>
            </entry>
            <entry>
                <ind>10.0</ind><dep>0.01</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>ADF.needle</object-name>
        <property>instrumentation/adf/indicated-bearing-deg</property>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

  <animation>
    <type>rotate</type>
        <object-name>HSI.knob</object-name>
            <property>instrumentation/nav/radials/selected-deg</property>
    <factor>5</factor>
    <center>
      <x-m>  0.00913 </x-m>
      <y-m> -0.03106 </y-m>
      <z-m> -0.03340 </z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>HSI.knob</object-name>
        <action>
            <button>4</button>
            <name>increase</name>
            <repeatable>true</repeatable>
             <binding>
             <command>property-adjust</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <factor>1</factor>
            <min>0</min>
            <max>360</max>
            <wrap>0</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>HSI.knob</object-name>
        <action>
            <button>3</button>
            <name>decrease</name>
            <repeatable>true</repeatable>
             <binding>
             <command>property-adjust</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <step>-1</step>
            <min>0</min>
            <max>360</max>
            <wrap>0</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>HSI-R</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
             <binding>
             <command>property-adjust</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <step>-1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <step>1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
           </binding>
       </action>
       <action>
            <name>increase</name>
            <button>4</button>
            <repeatable>true</repeatable>
            <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <step>1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
            </binding>
      </action>
      <action>
            <name>decrease</name>
            <button>3</button>
            <repeatable>true</repeatable>
            <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <step>-1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
            </binding>
      </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>nav-radials</tooltip-id>
        <label>Radials-Sel-Deg: %.0f</label>
            <property>instrumentation/nav/radials/selected-deg</property>
      </binding>
    </hovered>   
    </animation>

    <animation>
        <type>pick</type>
        <object-name>HSI-L</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
             <binding>
             <command>property-adjust</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <step>-1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <step>1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
           </binding>
       </action>
       <action>
            <name>increase</name>
            <button>4</button>
            <repeatable>true</repeatable>
            <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <step>1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
            </binding>
      </action>
      <action>
            <name>decrease</name>
            <button>3</button>
            <repeatable>true</repeatable>
            <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav/radials/selected-deg</property>
            <step>-1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
            </binding>
      </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>nav-radials</tooltip-id>
        <label>Radials-Sel-Deg: %.0f</label>
            <property>instrumentation/nav/radials/selected-deg</property>
      </binding>
    </hovered>   
    </animation>


</PropertyList>
