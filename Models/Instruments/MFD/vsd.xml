<!--
Citation X - Vertical Situation Display
-->

<PropertyList>

<path>vsd.ac</path>

    <animation>
        <type>select</type>
        <object-name>Vsd.screen</object-name>
        <condition>
					<and>
	          <property>systems/electrical/outputs/mfd1</property>
						<property>instrumentation/efis/vsd</property>
					</and>
				</condition>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Vsd.screen</object-name>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
            <factor-prop>controls/lighting/mfd</factor-prop>
        </emission>
    </animation>

</PropertyList>
