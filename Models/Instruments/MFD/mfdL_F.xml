<!--
Citation X - Navigation display
-->

<PropertyList>

<path>screenL_F.ac</path>

    <animation>
        <type>select</type>
        <object-name>screenL_F</object-name>
        <condition>
          <greater-than>
	          <property>controls/electric/avionics-switch</property>
            <value>0</value>
          </greater-than>
				</condition>
    </animation>

    <animation>
        <type>material</type>
        <object-name>screenL_F</object-name>
        <condition>
						<or>
	           	<property>systems/electrical/left-emer-bus</property>
	           	<property>systems/electrical/left-bus-norm</property>
						</or>
        </condition>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
            <factor-prop>controls/lighting/mfd-norm</factor-prop>
        </emission>
    </animation>

</PropertyList>
