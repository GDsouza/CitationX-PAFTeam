<!--
Citation X - Navigation display
-->

<PropertyList>

<path>screenR_F.ac</path>

    <animation>
        <type>select</type>
        <object-name>screenR_F</object-name>
        <condition>
          <property>controls/electric/avionics-power</property>
				</condition>
    </animation>

    <animation>
        <type>material</type>
        <object-name>screenR_F</object-name>
        <condition>
						<or>
	           	<property>systems/electrical/left-emer-bus</property>
	           	<property>systems/electrical/left-bus-norm</property>
						</or>
        </condition>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
            <factor-prop>controls/lighting/mfd-norm[1]</factor-prop>
        </emission>
    </animation>

</PropertyList>
