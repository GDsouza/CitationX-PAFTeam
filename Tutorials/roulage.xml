<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    <name>3 - Roulage</name>
    <description>Roulage</description>
		<step-time>3</step-time>
    <init>
      <set>
        <property>sim/current-view/view-number</property>
        <value>0</value>
      </set>
      <set>
        <property>controls/gear/brake-parking</property>
        <value>1</value>
      </set>
      <set>
        <property>controls/flight/flaps-select</property>
        <value>0</value>
      </set>
      <set>
        <property>controls/electric/stby-pwr</property>
        <value>1</value>
      </set> 
     <set>
        <property>controls/electric/batt1-switch</property>
        <value>1</value>
      </set>
      <set>
        <property>controls/electric/batt2-switch</property>
        <value>1</value>
      </set>
      <set>
        <property>controls/electric/avionics-switch</property>
        <value>2</value>
      </set> 
     <set>
        <property>controls/engines/engine/cutoff</property>
        <value>0</value>
      </set>
      <set>
        <property>controls/engines/engine[1]/cutoff</property>
        <value>0</value>
      </set>
     <set>
        <property>controls/engines/engine[1]/ignition</property>
        <value>0</value>
      </set>
     <set>
        <property>controls/engines/engine/ignition</property>
        <value>0</value>
      </set>
     <set>
        <property>engines/engine[1]/cycle-up</property>
        <value>1</value>
      </set>
     <set>
        <property>engines/engine/cycle-up</property>
        <value>1</value>
      </set>
     <set>
        <property>controls/electric/engine[1]/generator</property>
        <value>1</value>
      </set>
     <set>
        <property>controls/electric/engine/generator</property>
        <value>1</value>
      </set>
     <set>
        <property>controls/anti-ice/lh-pitot</property>
        <value>1</value>
      </set>
     <set>
        <property>controls/anti-ice/rh-pitot</property>
        <value>1</value>
      </set>
     <set>
        <property>controls/anti-ice/lh-ws</property>
        <value>1</value>
      </set>
     <set>
        <property>controls/anti-ice/rh-ws</property>
        <value>1</value>
      </set>
      <set>
        <property>instrumentation/annunciators/ack-warning</property>
        <value>1</value>
      </set>
      <set>
        <property>instrumentation/annunciators/ack-caution</property>
        <value>1</value>
      </set>
    </init>

    <step>
        <message>
          Supprimer le manche (cliquer dessus){|.}
        </message>
        <view>
    			<heading-offset-deg>0.0</heading-offset-deg>
    			<pitch-offset-deg>-11.8</pitch-offset-deg>
    			<field-of-view>96.2</field-of-view>
        </view>
				<marker>
			    <x-m>-7.4612</x-m>
			    <y-m>-0.3769</y-m>
			    <z-m>0.0661</z-m>
			    <scale>5.5</scale>
				</marker>
        <error>
          <condition>
							<property>sim/model/show-yoke-L</property>
          </condition>
        </error>
        <exit>
					<condition>
						<not>
							<property>sim/model/show-yoke-L</property>
            </not>
					</condition>
        </exit>
    </step>

    <step>
        <message>
          Fermer la porte exterieure si ouverte (CTRL d){|.}
        </message>
        <view>
    			<heading-offset-deg>0.0</heading-offset-deg>
    			<pitch-offset-deg>-11.8</pitch-offset-deg>
    			<field-of-view>96.2</field-of-view>
        </view>
        <error>
          <condition>          
						<property>controls/cabin-door/open</property>
          </condition>
        </error>
        <exit>
					<condition>
						<not>
							<property>controls/cabin-door/open</property>
            </not>
					</condition>
        </exit>
    </step>

    <step>
      <message>
        Basculer sur GND REC ANTI COLL (2 crans){|.}
      </message>
      <view>
  			<heading-offset-deg>305</heading-offset-deg>
  			<pitch-offset-deg>-24</pitch-offset-deg>
  			<field-of-view>26</field-of-view>
      </view>
			<marker>
		    <x-m>-7.6826</x-m>
		    <y-m>0.4099</y-m>
		    <z-m>-0.1603</z-m>
		    <scale>2.0</scale>
			</marker>
      <error>
        <condition>
          <not>
					  <property>controls/lighting/strobes</property>
          </not>
        </condition>
      </error>
      <exit>
				<condition>
					<property>controls/lighting/strobes</property>
				</condition>
      </exit>
    </step>

    <step>
      <message>
        Allumer les feux de navigation (NAV){|.}
      </message>
      <view>
  			<heading-offset-deg>310</heading-offset-deg>
  			<pitch-offset-deg>-30</pitch-offset-deg>
  			<field-of-view>13.8</field-of-view>
      </view>
			<marker>
		    <x-m>-7.6451</x-m>
		    <y-m>0.4008</y-m>
		    <z-m>-0.1760</z-m>
		    <scale>2.0</scale>
			</marker>
      <error>
        <condition>
          <not>
  					<property>controls/lighting/nav-lights</property>
          </not>
        </condition>
      </error>
      <exit>
				<condition>
					<property>controls/lighting/nav-lights</property>
				</condition>
      </exit>
    </step>

    <step>
      <message>
        Allumer les feux de roulage (TAXI LIGHT){|.}
      </message>
      <view>
  			<heading-offset-deg>303</heading-offset-deg>
  			<pitch-offset-deg>-52</pitch-offset-deg>
  			<field-of-view>36</field-of-view>
      </view>
			<marker>
		    <x-m>-7.2038</x-m>
		    <y-m>0.0348</y-m>
		    <z-m>-0.2685</z-m>
		    <scale>2.0</scale>
			</marker>
      <error>
        <condition>
          <not>
  					<property>controls/lighting/taxi-light</property>
          </not>
        </condition>
      </error>
      <exit>
				<condition>
					<property>controls/lighting/taxi-light</property>
				</condition>
      </exit>
    </step>

		<step>
			<message>
				Mettre le bouton rotatif PASS OXY (oxygene passagers) sur AUTO{|.}
			</message>
			<view>
				<heading-offset-deg>24</heading-offset-deg>
				<pitch-offset-deg>-34</pitch-offset-deg>
				<field-of-view>35</field-of-view>
			</view>
			<marker>
				<x-m>-7.6909</x-m>
				<y-m>-0.6250</y-m>
				<z-m>-0.1650</z-m>
				<scale>2.0</scale>
			</marker>
			<error>
				<condition>
					<not-equals>
						<property>controls/oxygen/pass-oxy</property>
						<value>1</value>
					</not-equals>
				</condition>
			</error>
			<exit>
				<condition>
          <equals>
					  <property>controls/oxygen/pass-oxy</property>
					  <value>1</value>
          </equals>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Positionner l'eclairage de secours (EMERG LIGHT) sur ARM{|.}
			</message>
			<view>
				<heading-offset-deg>7.0</heading-offset-deg>
				<pitch-offset-deg>-35.8</pitch-offset-deg>
				<field-of-view>24</field-of-view>
			</view>
			<marker>
		    <x-m>-7.7182</x-m>
		    <y-m>-0.5025</y-m>
		    <z-m>-0.1505</z-m>
		    <scale>2.0</scale>
			</marker>
			<error>
				<condition>
          <less-than>
					  <property>controls/lighting/emer-lights</property>
					  <value>2</value>
          </less-than>
				</condition>
			</error>
			<exit>
				<condition>
          <equals>
					  <property>controls/lighting/emer-lights</property>
					  <value>2</value>
          </equals>
				</condition>
			</exit>
    </step>

		<step>
			<message>
				Positionner SEAT BELT LTS / PASS SAFETY  sur SEAT BELT LTS{|.}
			</message>
			<view>
				<heading-offset-deg>310</heading-offset-deg>
				<pitch-offset-deg>-29.3</pitch-offset-deg>
				<field-of-view>7.7</field-of-view>
			</view>
			<marker>
		    <x-m>-7.6860</x-m>
		    <y-m>0.4289</y-m>
		    <z-m>-0.1645</z-m> 
		    <scale>2.0</scale>
			</marker>
			<error>
				<condition>
          <not-equals>
					  <property>controls/lighting/seat-belts</property>
            <value>1</value>
          </not-equals>
				</condition>
			</error>
			<exit>
				<condition>
          <equals>
					  <property>controls/lighting/seat-belts</property>
            <value>1</value>
          </equals>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Relacher le frein de stationnement (derriere la console centrale) ou shift b{|.}
			</message>
			<view>
				<heading-offset-deg>238</heading-offset-deg>
				<pitch-offset-deg>-56</pitch-offset-deg>
				<field-of-view>18</field-of-view>
			</view>
				<marker>
			    <x-m>-6.76</x-m>
			    <y-m>0.0</y-m>
			    <z-m>-0.2926</z-m>
			    <scale>2.5</scale>
				</marker>
			<error>
				<condition>
					<property>controls/gear/brake-parking</property>
				</condition>
			</error>
			<exit>
				<condition>
					<not>
						<property>controls/gear/brake-parking</property>
					</not>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Tuto suivant :  4 - Decollage{|.}
			</message>
		</step>

    <end>
     <view>
        <heading-offset-deg>0</heading-offset-deg>
        <pitch-offset-deg>-11</pitch-offset-deg>
        <field-of-view>81</field-of-view>
      </view>
    </end>

</PropertyList>
