<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    <name>Engines Startup</name>
    <description>Engines Startup</description>
		<step-time>2</step-time>
    <init>
        <set>
            <property>sim/current-view/view-number</property>
            <value>0</value>
        </set>
        <set>
            <property>controls/gear/brake-parking</property>
            <value>1</value>
        </set>
        <set>
            <property>controls/flight/flaps</property>
            <value>0.0</value>
        </set>
<!--
        <set>
            <property>controls/electric/external-power</property>
            <value>1</value>
        </set>
-->
        <set>
            <property>controls/electric/battery-switch</property>
            <value>1</value>
        </set>
        <set>
            <property>controls/electric/battery-switch[1]</property>
            <value>1</value>
        </set>
        <set>
            <property>controls/electric/engine[0]/generator</property>
            <value>1</value>
        </set>
        <set>
            <property>controls/electric/engine[1]/generator</property>
            <value>1</value>
        </set>
        <set>
            <property>controls/electric/avionics-switch</property>
            <value>2</value>
        </set> 
       <set>
            <property>controls/engines/engine[0]/cutoff</property>
            <value>1</value>
        </set>
        <set>
            <property>controls/engines/engine[1]/cutoff</property>
            <value>1</value>
        </set>
<!--
        <set>
            <property>controls/engines/engine[0]/throttle</property>
            <value>0.0</value>
        </set>
        <set>
            <property>controls/engines/engine[1]/throttle</property>
            <value>0.0</value>
        </set>
-->
    </init>

    <step>
        <message>
            Hide Yoke (click on yoke){|.}
        </message>
        <view>
    			<heading-offset-deg>0.0</heading-offset-deg>
    			<pitch-offset-deg>-11.8</pitch-offset-deg>
    			<roll-offset-deg>0.0</roll-offset-deg>
    			<field-of-view>96.2</field-of-view>
        </view>
				<marker>
			    <x-m>-7.4612</x-m>
			    <y-m>-0.3769</y-m>
			    <z-m>0.0661</z-m>
			    <scale>5.5</scale>
				</marker>
        <error>
					<message>
            Hide Yoke (click on yoke){|.}
          </message>
          <condition>
							<property>sim/model/show-yoke_L</property>
          </condition>
        </error>
        <exit>
					<condition>
						<not>
							<property>sim/model/show-yoke_RL</property>
            </not>
					</condition>
        </exit>
    </step>

    <step>
        <message>
            PARK BRAKE to "ON" (pull){|.}
        </message>
        <view>
    			<heading-offset-deg>0.0</heading-offset-deg>
    			<pitch-offset-deg>-90.0</pitch-offset-deg>
    			<roll-offset-deg>0.0</roll-offset-deg>
    			<field-of-view>100</field-of-view>
        </view>
				<marker>
			    <x-m>-6.7851</x-m>
			    <y-m>-0.0339</y-m>
			    <z-m>-0.3099</z-m>
			    <scale>4.10</scale>
				</marker>
        <error>
					<message>
            Set PARK BRAKE to "ON"{|.}
          </message>
          <condition>
						<not>
							<property>controls/gear/brake-parking</property>
            </not>
          </condition>
        </error>
        <exit>
					<condition>
							<property>controls/gear/brake-parking</property>
					</condition>
        </exit>
    </step>

		<step>
			<message>
				Set THROTTLES to "IDLE" position {|.}
			</message>
			<view>
				<heading-offset-deg>315</heading-offset-deg>
				<pitch-offset-deg>-52</pitch-offset-deg>
				<field-of-view>35</field-of-view>
			</view>
			<marker>
				<x-m>-7.2438</x-m>
				<y-m>0.0198</y-m>
				<z-m>-0.2017</z-m>
				<scale>3.95</scale>
			</marker>
			<error>
				<message>
					Set THROTTLES to "IDLE" position {|.}
				</message>
				<condition>
					<or>
						<greater-than>
							<property>controls/engines/engine[0]/throttle</property>
							<value>0</value>
							</greater-than>
							<greater-than>
								<property>controls/engines/engine[1]/throttle</property>
								<value>0</value>
							</greater-than>
            <property>controls/engines/engine[0]/cutoff</property>
            <property>controls/engines/engine[1]/cutoff</property>
					</or>
				</condition>
			</error>
			<exit>
				<condition>
					<and>
						<equals>
							<property>controls/engines/engine[0]/throttle</property>
							<value>0</value>
						</equals>
						<equals>
							<property>controls/engines/engine[1]/throttle</property>
							<value>0</value>
						</equals>
            <not>
              <property>controls/engines/engine[0]/cutoff</property>
            </not>
            <not>
              <property>controls/engines/engine[1]/cutoff</property>
            </not>
					</and>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				If APU not running, set Ext Pwr ON {|.}
			</message>
			<view>
				<heading-offset-deg>350.578</heading-offset-deg>
				<pitch-offset-deg>-39.3</pitch-offset-deg>
				<field-of-view>18</field-of-view>
			</view>
				<marker>
			    <x-m>-7.7165</x-m>
			    <y-m>-0.1909</y-m>
			    <z-m>-0.1496</z-m>
			    <scale>1.30</scale>
				</marker>
			<error>
				<message>
					Set Ext Pwr ON{|.}
				</message>
				<condition>
					<and>
						<not>
							<property>controls/electric/APU/running</property>
						</not>
						<not>
							<property>controls/electric/external-power</property>
						</not>
					</and>
				</condition>
			</error>
			<exit>
				<condition>
						<property>controls/electric/external-power</property>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Switch on BATT 1{|.}
			</message>
			<view>
				<heading-offset-deg>350.578</heading-offset-deg>
				<pitch-offset-deg>-39.3</pitch-offset-deg>
				<field-of-view>18</field-of-view>
			</view>
				<marker>
			    <x-m>-7.7066</x-m>
			    <y-m>-0.3281</y-m>
			    <z-m>-0.1380</z-m>
			    <scale>1.40</scale>
				</marker>
			<error>
				<message>
					Switch on BATT 1{|.}
				</message>
				<condition>
						<not>
							<property>controls/electric/battery-switch</property>
						</not>
				</condition>
			</error>
			<exit>
				<condition>
						<property>controls/electric/battery-switch</property>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Switch on BATT 2{|.}
			</message>
			<view>
				<heading-offset-deg>350.578</heading-offset-deg>
				<pitch-offset-deg>-39.3</pitch-offset-deg>
				<field-of-view>18</field-of-view>
			</view>
				<marker>
			    <x-m>-7.7066</x-m>
			    <y-m>-0.2116</y-m>
			    <z-m>-0.1380</z-m>
			    <scale>1.40</scale>
				</marker>
			<error>
				<message>
					Switch on BATT 2{|.}
				</message>
				<condition>
						<not>
							<property>controls/electric/battery-switch[1]</property>
						</not>
				</condition>
			</error>
			<exit>
				<condition>
						<property>controls/electric/battery-switch[1]</property>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Switch on LH GEN{|.}
			</message>
			<view>
				<heading-offset-deg>350.578</heading-offset-deg>
				<pitch-offset-deg>-39.3</pitch-offset-deg>
				<field-of-view>18</field-of-view>
			</view>
				<marker>
			    <x-m>-7.7066</x-m>
			    <y-m>-0.2893</y-m>
			    <z-m>-0.1380</z-m>
			    <scale>1.40</scale>
				</marker>
			<error>
				<message>
					Switch on LH GEN{|.}
				</message>
				<condition>
						<not>
							<property>controls/electric/engine[0]/generator</property>
						</not>
				</condition>
			</error>
			<exit>
				<condition>
						<property>controls/electric/engine[0]/generator</property>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Switch on RH GEN{|.}
			</message>
			<view>
				<heading-offset-deg>350.578</heading-offset-deg>
				<pitch-offset-deg>-39.3</pitch-offset-deg>
				<field-of-view>18</field-of-view>
			</view>
				<marker>
			    <x-m>-7.7066</x-m>
			    <y-m>-0.2488</y-m>
			    <z-m>-0.1380</z-m>
			    <scale>1.40</scale>
				</marker>
			<error>
				<message>
					Switch on RH GEN{|.}
				</message>
				<condition>
						<not>
							<property>controls/electric/engine[1]/generator</property>
						</not>
				</condition>
			</error>
			<exit>
				<condition>
						<property>controls/electric/engine[1]/generator</property>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Switch on AVIONICS (2 steps){|.}
			</message>
			<view>
				<heading-offset-deg>350.578</heading-offset-deg>
				<pitch-offset-deg>-39.3</pitch-offset-deg>
				<field-of-view>18</field-of-view>
			</view>
			<marker>
				<x-m>-7.6826</x-m>
					<y-m>-0.2909</y-m>
			    <z-m>-0.1595</z-m>
			    <scale>1.40</scale>
			</marker>
			<error>
				<message>Switch on AVIONICS{|.}
				</message>
				<condition>
					<equals>
						<property>controls/electric/avionics-switch</property>
						<value>0</value>
					</equals>
				</condition>
			</error>
			<exit>
				<condition>
					<equals>
						<property>controls/electric/avionics-switch</property>
						<value>2</value>
					</equals>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Push Master Alarm Reset to stop alarm{|.}
			</message>
			<view>
				<heading-offset-deg>0.0</heading-offset-deg>
				<pitch-offset-deg>-12.4</pitch-offset-deg>
				<field-of-view>62.4</field-of-view>
			</view>
			<marker>
				<x-m>-7.8157</x-m>
					<y-m>-0.3512</y-m>
			    <z-m>0.1843</z-m>
			    <scale>2.45</scale>
			</marker>
			<error>
				<message>
					Push Master Alarm Reset to stop alarm{|.}
				</message>
				<condition>
					<not>
						<property>instrumentation/annunciators/ack-warning</property>
					</not>
				</condition>
			</error>
			<exit>
				<condition>
					<property>instrumentation/annunciators/ack-warning</property>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Switch on LEFT IGNITION{|.}
			</message>
			<view>
				<heading-offset-deg>348.46</heading-offset-deg>
				<pitch-offset-deg>-34.37</pitch-offset-deg>
				<field-of-view>40</field-of-view>
			</view>
			<marker>
			   <x-m>-7.6826</x-m>
			   <y-m>-0.2132</y-m>
			   <z-m>-0.1595</z-m>
			   <scale>1.40</scale>
			</marker>
			<error>
				<message>Switch on LEFT IGNITION{|.}
				</message>
				<condition>
					<equals>
						<property>controls/engines/engine[0]/ignition</property>
            <value>1</value>
					</equals>
				</condition>
			</error>
			<exit>
				<condition>
					<not-equals>
						<property>controls/engines/engine[0]/ignition</property>
            <value>1</value>
					</not-equals>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Push LEFT STARTER BUTTON{|.}
			</message>
			<view>
				<heading-offset-deg>348.46</heading-offset-deg>
				<pitch-offset-deg>-34.37</pitch-offset-deg>
				<field-of-view>40</field-of-view>
			</view>
			<marker>
		    <x-m>-7.6826</x-m>
		    <y-m>-0.2694</y-m>
		    <z-m>-0.1595</z-m>
		    <scale>1.40</scale>
			</marker>
			<error>
				<message>
					Wait for the left engine to spool up and ignite{|.}
					Engine progress can be viewed on the EICAS{|.}
				</message>
				<condition>
          <less-than>
					  <property>engines/engine[0]/turbine</property>
            <value>56</value>
          </less-than>
				</condition>
			</error>
			<exit>
				<condition>
          <greater-than>
					  <property>engines/engine[0]/turbine</property>
            <value>56</value>
          </greater-than>
				</condition>
			</exit>
    </step>

		<step>
			<message>
				Switch on RIGHT IGNITION{|.}
			</message>
			<view>
				<heading-offset-deg>348.46</heading-offset-deg>
				<pitch-offset-deg>-34.37</pitch-offset-deg>
				<field-of-view>40</field-of-view>
			</view>
			<marker>
		    <x-m>-7.6826</x-m>
		    <y-m>-0.1884</y-m>
		    <z-m>-0.1595</z-m>
			  <scale>1.40</scale>
			</marker>
			<error>
				<message>Switch on RIGHT IGNITION{|.}
				</message>
				<condition>
					<equals>
						<property>controls/engines/engine[1]/ignition</property>
            <value>1</value>
					</equals>
				</condition>
			</error>
			<exit>
				<condition>
					<not-equals>
						<property>controls/engines/engine[1]/ignition</property>
            <value>1</value>
					</not-equals>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Push RIGHT STARTER BUTTON{|.}
			</message>
			<view>
				<heading-offset-deg>348.46</heading-offset-deg>
				<pitch-offset-deg>-34.37</pitch-offset-deg>
				<field-of-view>40</field-of-view>
			</view>
			<marker>
		    <x-m>-7.6826</x-m>
		    <y-m>-0.2355</y-m>
		    <z-m>-0.1595</z-m>
		    <scale>1.40</scale>
			</marker>
			<error>
				<message>
					Wait for the right engine to spool up and ignite{|.}
					Engine progress can be viewed on the EICAS{|.}
				</message>
				<condition>
          <less-than>
					  <property>engines/engine[1]/turbine</property>
            <value>56</value>
          </less-than>
				</condition>
			</error>
			<exit>
				<condition>
          <greater-than>
					  <property>engines/engine[01]/turbine</property>
            <value>56</value>
          </greater-than>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Push Master Alarm Reset to stop alarm{|.}
			</message>
			<view>
				<heading-offset-deg>0.0</heading-offset-deg>
				<pitch-offset-deg>-12.4</pitch-offset-deg>
				<field-of-view>62.4</field-of-view>
			</view>
			<marker>
				<x-m>-7.8157</x-m>
					<y-m>-0.3512</y-m>
			    <z-m>0.1843</z-m>
			    <scale>2.45</scale>
			</marker>
			<error>
				<message>
					Push Master Alarm Reset to stop alarm{|.}
				</message>
				<condition>
					<not>
						<property>instrumentation/annunciators/ack-warning</property>
					</not>
				</condition>
			</error>
			<exit>
				<condition>
					<property>instrumentation/annunciators/ack-warning</property>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Set Ext Pwr OFF {|.}
			</message>
			<view>
				<heading-offset-deg>350.578</heading-offset-deg>
				<pitch-offset-deg>-39.3</pitch-offset-deg>
				<field-of-view>18</field-of-view>
			</view>
				<marker>
			    <x-m>-7.7165</x-m>
			    <y-m>-0.1909</y-m>
			    <z-m>-0.1496</z-m>
			    <scale>1.30</scale>
				</marker>
			<error>
				<message>
					Set Ext Pwr OFF{|.}
				</message>
				<condition>
					<and>
						<not>
							<property>controls/electric/APU/running</property>
						</not>
							<property>controls/electric/external-power</property>
					</and>
				</condition>
			</error>
			<exit>
				<condition>
					<not>
						<property>controls/electric/external-power</property>
					</not>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Switch on GND REC / ANTI COLL{|.}
			</message>
			<view>
				<heading-offset-deg>311.83</heading-offset-deg>
				<pitch-offset-deg>-29.34</pitch-offset-deg>
				<field-of-view>13</field-of-view>
			</view>
			<marker>
		    <x-m>-7.6826</x-m>
		    <y-m>0.4050</y-m>
		    <z-m>-0.1603</z-m>
		    <scale>1.40</scale>
			</marker>
			<error>
				<message>
					Switch on GND REC / ANTI COLL{|.}
				</message>
				<condition>
					<not>
						<property>controls/lighting/strobe</property>
					</not>
				</condition>
			</error>
			<exit>
				<condition>
					<property>controls/lighting/strobe</property>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Switch on NAV LIGHTS{|.}
			</message>
			<view>
				<heading-offset-deg>311.83</heading-offset-deg>
				<pitch-offset-deg>-29.34</pitch-offset-deg>
				<field-of-view>13</field-of-view>
			</view>
			<marker>
		    <x-m>-7.6451</x-m>
		    <y-m>0.4008</y-m>
		    <z-m>-0.1760</z-m>
		    <scale>1.25</scale>
			</marker>
			<error>
				<message>
					Switch on NAV LIGHTS{|.}
				</message>
				<condition>
					<not>
						<property>controls/lighting/nav-lights</property>
					</not>
				</condition>
			</error>
			<exit>
				<condition>
					<property>controls/lighting/nav-lights</property>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Switch on TAXI LIGHT{|.}
			</message>
			<view>
				<heading-offset-deg>295.66</heading-offset-deg>
				<pitch-offset-deg>-54.89</pitch-offset-deg>
				<field-of-view>16</field-of-view>
			</view>
			<marker>
		    <x-m>-7.2038</x-m>
		    <y-m>0.0348</y-m>
		    <z-m>-0.2685</z-m>
		    <scale>1.40</scale>
			</marker>
			<error>
				<message>
					Switch on TAXI LIGHT{|.}
				</message>
				<condition>
					<not>
						<property>controls/lighting/taxi-lights</property>
					</not>
				</condition>
			</error>
			<exit>
				<condition>
					<property>controls/lighting/taxi-lights</property>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Set FLAPS to 15 deg.{|.}
			</message>
			<view>
				<heading-offset-deg>315</heading-offset-deg>
				<pitch-offset-deg>-52</pitch-offset-deg>
				<field-of-view>35</field-of-view>
			</view>
			<marker>
				<x-m>-7.24752</x-m>
				<y-m>0.0950</y-m>
				<z-m>-0.2182</z-m>
				<scale>3.95</scale>
			</marker>
			<error>
				<message>
					Set FLAPS to 15 deg.{|.}
				</message>
				<condition>
					<less-than>
							<property>controls/flight/flaps</property>
              <value>0.420</value>
            </less-than>
          </condition>
        </error>
        <exit>
					<condition>
						<greater-than>
							<property>controls/flight/flaps</property>
							<value>0.420</value>
            </greater-than>
					</condition>
        </exit>
    </step>

		<step>
			<message>
				Release Park Brake (left click) or (shift b){|.}
				and you are ready  to roll ! {|.}
			</message>
		</step>

    <end>
       <view>
            <heading-offset-deg>0</heading-offset-deg>
            <pitch-offset-deg>-12</pitch-offset-deg>
            <field-of-view>55</field-of-view>
        </view>
    </end>

</PropertyList>
