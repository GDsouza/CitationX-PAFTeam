			    <z-m>-0.1331</z-m>
			    <scale>2.0</scale>
				</marker>
			<error>
				<condition>
					<property>controls/APU/master</property>
				</condition>
			</error>
			<exit>
				<condition>
					<not>
						<property>controls/APU/master</property>
					</not>
				</condition>
			</exit>
		</step>

