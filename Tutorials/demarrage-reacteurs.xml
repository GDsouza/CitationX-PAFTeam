						</equals>
            <not>
              <property>controls/engines/engine[0]/cutoff</property>
            </not>
					</and>
				</condition>
			</exit>
		</step>

		<step>
			<message>
			Pousser le bouton ENGINE STARTER LH{|.}
			</message>
			<view>
				<heading-offset-deg>348.46</heading-offset-deg>
				<pitch-offset-deg>-34.37</pitch-offset-deg>
				<field-of-view>40</field-of-view>
