        <value>1</value>
      </set>
      <set>
        <property>instrumentation/annunciators/ack-caution</property>
        <value>1</value>
      </set>
    </init>

    <step>
        <message>
            Supprimer le manche (cliquer dessus){|.}
        </message>
        <view>
    			<heading-offset-deg>0.0</heading-offset-deg>
    			<pitch-offset-deg>-11.8</pitch-offset-deg>
    			<field-of-view>96.2</field-of-view>
        </view>
				<marker>
			    <x-m>-7.4612</x-m>
			    <y-m>-0.3769</y-m>
			    <z-m>0.0661</z-m>
			    <scale>5.5</scale>
				</marker>
        <error>
          <condition>
							<property>sim/model/show-yoke-L</property>
          </condition>
        </error>
        <exit>
					<condition>
						<not>
							<property>sim/model/show-yoke-L</property>
            </not>
					</condition>
        </exit>
    </step>

    <step>
      <message>
        Positionner sur GND REC (1 cran){|.}
      </message>
      <view>
  			<heading-offset-deg>316</heading-offset-deg>
  			<pitch-offset-deg>-23.2</pitch-offset-deg>
  			<field-of-view>31.3</field-of-view>
      </view>
			<marker>
		    <x-m>-7.6826</x-m>
		    <y-m>0.4099</y-m>
		    <z-m>-0.1603</z-m>
		    <scale>2.0</scale>
			</marker>
      <error>
        <condition>
          <not>
					  <property>controls/lighting/beacons</property>
          </not>
        </condition>
      </error>
      <exit>
				<condition>
					<property>controls/lighting/beacons</property>
				</condition>
      </exit>
    </step>

    <step>
      <message>
        Basculer le bouton IGNITION RH sur NORM{|.}
      </message>
      <view>
  			<heading-offset-deg>354</heading-offset-deg>
  			<pitch-offset-deg>-30.4</pitch-offset-deg>
  			<field-of-view>38.8</field-of-view>
      </view>
			<marker>
		    <x-m>-7.6826</x-m>
		    <y-m>-0.1834</y-m>
		    <z-m>-0.1595</z-m>
		    <scale>2.0</scale>
			</marker>
      <error>
        <condition>
          <not-equals>
						<property>controls/engines/engine[1]/ignition</property>
            <value>0</value>
          </not-equals>
        </condition>
      </error>
      <exit>
				<condition>
					<equals>
						<property>controls/engines/engine[1]/ignition</property>
            <value>0</value>
          </equals>
				</condition>
      </exit>
    </step>

		<step>
			<message>
				Cliquer sur la manette des gaz droite pour la mettre en position IDLE{|.}
			</message>
			<view>
				<heading-offset-deg>315</heading-offset-deg>
				<pitch-offset-deg>-52</pitch-offset-deg>Poussez
				<field-of-view>35</field-of-view>
			</view>
			<marker>
				<x-m>-7.2124</x-m>
				<y-m>0.0430</y-m>
				<z-m>-0.1983</z-m>
				<scale>2.0</scale>
			</marker>
			<error>
				<condition>
					<or>
						<greater-than>
							<property>controls/engines/engine[1]/throttle</property>
							<value>0</value>
						</greater-than>
            <property>controls/engines/engine[1]/cutoff</property>
					</or>
				</condition>
			</error>
			<exit>
				<condition>
					<and>
						<equals>
							<property>controls/engines/engine[1]/throttle</property>
							<value>0</value>
						</equals>
            <not>
              <property>controls/engines/engine[1]/cutoff</property>
            </not>
					</and>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Pousser le bouton ENGINE STARTER RH{|.}
			</message>
			<view>
				<heading-offset-deg>348.46</heading-offset-deg>
				<pitch-offset-deg>-34.37</pitch-offset-deg>
				<field-of-view>40</field-of-view>
			</view>
			<marker>
		    <x-m>-7.6826</x-m>
		    <y-m>-0.2355</y-m>
		    <z-m>-0.1595</z-m>
		    <scale>2.0</scale>
			</marker>
			<error>
				<condition>
          <not>
				    <property>engines/engine[1]/cycle-up</property>
          </not>
				</condition>
			</error>
			<exit>
				<condition>
				  <property>engines/engine[1]/cycle-up</property>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Attendre que FAN (compresseur) droit soit a 40%{|.}
